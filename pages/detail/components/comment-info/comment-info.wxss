.wrapper {
  padding: 40rpx 32rpx;
  border-bottom: 12rpx solid #eee ;
}

.wrapper .comment-title {
  display: flex;
  justify-content: space-between;
  color: #666;
  font-size: 32rpx;
  border-bottom: 2rpx solid #eee;
  padding-bottom: 32rpx;
}

.comment-info .user-info {
  display: flex;
  padding: 28rpx 0;
}

.comment-info .user-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}

.user-info .user-name {
  font-size: 32rpx;
  color: #666;
  line-height: 80rpx;
  margin-left: 12rpx;
}

.comment-content{
  font-size: 28rpx;
  color: #666;
}

.goods-info{
  font-size: 24rpx;
  color: #666;
  display: flex;
  margin-top: 32rpx;
}