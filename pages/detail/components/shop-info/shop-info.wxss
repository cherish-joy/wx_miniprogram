.shop-base-info {
  padding: 32rpx 8rpx;
}
.shop-base-info .shop-logo {
  width: 90rpx;
  height: 90rpx;
  border:2rpx solid #eee;
  border-radius: 50%;
  vertical-align: middle;
  margin-right: 12rpx;
}

.shop-base-info .shop-name{
  color: #666;
}

.shop-title-info {
  display: flex;
  align-items: center;
}

.shop-title-info .shop-title-info-left {
  display: flex;
  justify-content: space-around;
  text-align: center;
  color: #666;
  flex:1;
  border-right: 2rpx solid #eee;
}

.shop-title-info .shop-title-info-right {
  flex:1;
  font-size: 28rpx;
  display: flex;
  flex-direction: column;
  padding: 0 36rpx;
}

.shop-title-info-left .total-sales {
  font-size: 28rpx;
}

.shop-title-info-right .score-item {
  display: flex;
  justify-content: space-between;
  line-height: 42rpx;
}

.shop-title-info-right .low-color {
  color: #70a445;
}
.shop-title-info-right .high-color {
  color: red;
}

.shop-title-info-right .desc {
  color: #666;
}

.shop-button-info{
  text-align: center;
  margin: 48rpx 0;
  padding-bottom: 48rpx;
  border-bottom: 12rpx solid #eee;
}

.shop-button-info .shop-button::after {
  border: none;
}

.shop-button-info .shop-button {
  padding: 8rpx 100rpx;
}
