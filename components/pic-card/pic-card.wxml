<!--components/pic-card/pic-card.wxml-->
<view class="goods-item" bindtap="itemClick">
	<image src="{{goodsItem.show.img||goodsItem.image}}" mode="widthFix" class="img"></image>
	<view class="goods-info">
		<view class="title"> {{goodsItem.title}}</view>
    <view >
      <text class="price">¥{{goodsItem.price}}</text>
      <text class="favorites">☆{{goodsItem.cfav}}</text>
    </view>
	</view>
</view>